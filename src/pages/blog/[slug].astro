---
import getBlogPosts from "../../db/getBlogPosts";
import type { BlogPost } from "../../db/types";
import Root from "../../layouts/root.astro";

export async function getStaticPaths() {
  const posts = await getBlogPosts();
  return posts.map((post) => ({
    params: { slug: post.slug },
    props: { post },
  }));
}

const { post } = Astro.props as { post: BlogPost };
---

<Root title={post.title + " Â· Zachary Robinson"}>
  <h1 class="font-handwriting text-4xl">{post.title}</h1>
  <p class="text-zinc-400">
    {
      new Date(post.date).toLocaleDateString("en-us", {
        year: "numeric",
        month: "long",
        day: "numeric",
      })
    }
  </p>
